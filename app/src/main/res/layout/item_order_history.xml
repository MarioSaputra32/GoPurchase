<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginVertical="12dp"
    android:layout_marginHorizontal="16dp"
    android:padding="16dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp"
    android:backgroundTint="@android:color/white"
    app:strokeColor="@color/gray_300"
    app:strokeWidth="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">  <!-- Tambahkan padding horizontal -->

        <!-- Order ID -->
        <TextView
            android:id="@+id/orderIdText"
            android:text="Order #ORD-123456"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"/>

        <!-- Order Date -->
        <TextView
            android:id="@+id/orderDateText"
            android:text="10 Jan 2026, 12:34"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"
            android:layout_marginVertical="12dp"/>

        <!-- Total & Status Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"> <!-- Sedikit padding supaya tidak mepet -->

            <!-- Total Amount -->
            <TextView
                android:id="@+id/orderTotalText"
                android:text="Rp 1.500.000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <!-- Order Status -->
            <TextView
                android:id="@+id/orderStatusText"
                android:text="PENDING"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/orange_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

