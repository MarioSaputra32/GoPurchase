<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_surface">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Cart Items RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cartRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/spacing_md"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <!-- Empty Cart Layout -->
        <LinearLayout
            android:id="@+id/emptyCartLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_xl"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_shopping_cart"
                app:tint="@color/md_theme_outline_variant"
                android:alpha="0.5"
                android:contentDescription="@string/cart_empty"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart_empty"
                android:layout_marginTop="@dimen/spacing_md"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart_empty_desc"
                android:textColor="@color/md_theme_on_surface_variant"
                android:layout_marginTop="@dimen/spacing_sm"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartShopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_shopping"
                android:layout_marginTop="@dimen/spacing_lg"
                app:cornerRadius="@dimen/corner_radius_md"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Cart Summary (Bottom Sheet) -->
    <LinearLayout
        android:id="@+id/cartSummaryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/md_theme_surface_container"
        android:padding="@dimen/spacing_md"
        android:elevation="@dimen/elevation_md"
        android:layout_gravity="bottom">

        <!-- Subtotal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_xs">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/subtotal"
                android:textColor="@color/md_theme_on_surface_variant"/>

            <TextView
                android:id="@+id/subtotalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"/>

        </LinearLayout>

        <!-- Shipping -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_xs">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/shipping"
                android:textColor="@color/md_theme_on_surface_variant"/>

            <TextView
                android:id="@+id/shippingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_theme_outline_variant"
            android:layout_marginVertical="@dimen/spacing_sm"/>

        <!-- Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_md">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total"/>

            <TextView
                android:id="@+id/totalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textColor="@color/md_theme_primary"/>

        </LinearLayout>

        <!-- Checkout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/proceed_to_checkout"
            app:cornerRadius="@dimen/corner_radius_md"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
