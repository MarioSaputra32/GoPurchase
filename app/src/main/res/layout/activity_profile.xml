<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/my_profile"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Use fragment_profile.xml content directly -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/md_theme_primary_container"
                android:padding="@dimen/spacing_lg"
                android:gravity="center">

                <!-- Profile Avatar -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="@dimen/elevation_sm">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/my_profile"/>

                </com.google.android.material.card.MaterialCardView>

                <!-- Profile Name -->
                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:textColor="@color/md_theme_on_primary_container"/>

                <!-- Profile Email -->
                <TextView
                    android:id="@+id/profileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="john.doe@example.com"
                    android:textColor="@color/md_theme_on_primary_container"
                    android:alpha="0.8"
                    android:layout_marginTop="@dimen/spacing_xs"/>

            </LinearLayout>

            <!-- Menu Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <!-- Edit Profile -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:cardCornerRadius="@dimen/corner_radius_md"
                    app:cardElevation="@dimen/elevation_xs"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_edit"
                            app:tint="@color/md_theme_primary"
                            android:contentDescription="@string/edit_profile"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/edit_profile"
                            android:layout_marginStart="@dimen/spacing_md"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/md_theme_on_surface_variant"
                            android:contentDescription="@string/edit_profile"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- My Orders -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMyOrders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:cardCornerRadius="@dimen/corner_radius_md"
                    app:cardElevation="@dimen/elevation_xs"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_package"
                            app:tint="@color/md_theme_primary"
                            android:contentDescription="@string/my_orders"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/my_orders"
                            android:layout_marginStart="@dimen/spacing_md"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/md_theme_on_surface_variant"
                            android:contentDescription="@string/my_orders"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Notifications -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:cardCornerRadius="@dimen/corner_radius_md"
                    app:cardElevation="@dimen/elevation_xs"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notifications"
                            app:tint="@color/md_theme_primary"
                            android:contentDescription="@string/notifications"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/notifications"
                            android:layout_marginStart="@dimen/spacing_md"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/md_theme_on_surface_variant"
                            android:contentDescription="@string/notifications"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Addresses -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAddresses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:cardCornerRadius="@dimen/corner_radius_md"
                    app:cardElevation="@dimen/elevation_xs"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/md_theme_primary"
                            android:contentDescription="@string/addresses"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/addresses"
                            android:layout_marginStart="@dimen/spacing_md"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/md_theme_on_surface_variant"
                            android:contentDescription="@string/addresses"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Payment Methods -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPaymentMethods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:cardCornerRadius="@dimen/corner_radius_md"
                    app:cardElevation="@dimen/elevation_xs"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_credit_card"
                            app:tint="@color/md_theme_primary"
                            android:contentDescription="@string/payment_methods"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/payment_methods"
                            android:layout_marginStart="@dimen/spacing_md"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/md_theme_on_surface_variant"
                            android:contentDescription="@string/payment_methods"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Wishlist -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardWishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:cardCornerRadius="@dimen/corner_radius_md"
                    app:cardElevation="@dimen/elevation_xs"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_favorite"
                            app:tint="@color/md_theme_primary"
                            android:contentDescription="@string/wishlist"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/wishlist"
                            android:layout_marginStart="@dimen/spacing_md"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/md_theme_on_surface_variant"
                            android:contentDescription="@string/wishlist"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Settings -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:cardCornerRadius="@dimen/corner_radius_md"
                    app:cardElevation="@dimen/elevation_xs"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_settings"
                            app:tint="@color/md_theme_primary"
                            android:contentDescription="@string/account_settings"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/account_settings"
                            android:layout_marginStart="@dimen/spacing_md"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/md_theme_on_surface_variant"
                            android:contentDescription="@string/account_settings"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Help & Support -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:cardCornerRadius="@dimen/corner_radius_md"
                    app:cardElevation="@dimen/elevation_xs"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help"
                            app:tint="@color/md_theme_primary"
                            android:contentDescription="@string/help_support"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/help_support"
                            android:layout_marginStart="@dimen/spacing_md"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/md_theme_on_surface_variant"
                            android:contentDescription="@string/help_support"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- About -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:cardCornerRadius="@dimen/corner_radius_md"
                    app:cardElevation="@dimen/elevation_xs"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            app:tint="@color/md_theme_primary"
                            android:contentDescription="@string/about"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/about"
                            android:layout_marginStart="@dimen/spacing_md"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/md_theme_on_surface_variant"
                            android:contentDescription="@string/about"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Logout -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:cardCornerRadius="@dimen/corner_radius_md"
                    app:cardElevation="@dimen/elevation_xs"
                    app:strokeColor="@color/md_theme_error"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_logout"
                            app:tint="@color/md_theme_error"
                            android:contentDescription="@string/logout"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/logout"
                            android:textColor="@color/md_theme_error"
                            android:layout_marginStart="@dimen/spacing_md"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/md_theme_error"
                            android:contentDescription="@string/logout"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
