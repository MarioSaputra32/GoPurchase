<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pab.gopurchase">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/splash"
        android:roundIcon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoPurchase"
        tools:targetApi="31">

        <!-- Splash Activity (Launcher) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.GoPurchase.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Onboarding -->
        <activity
            android:name=".OnboardingActivity"
            android:exported="false" />

        <!-- Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main / Home -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Register (jika ada filenya) -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Product Detail -->
        <activity
            android:name=".ProductDetailActivity"
            android:exported="false" />

        <!-- Checkout -->
        <activity
            android:name=".CheckoutActivity"
            android:exported="false" />

        <!-- search -->
        <activity
            android:name=".SearchActivity"
            android:exported="false" />

        <!-- Payment Success -->
        <activity
            android:name=".PaymentSuccessActivity"
            android:exported="false" />

        <activity
            android:name=".OrderHistoryActivity"
            android:exported="false" />

        <!-- Order Detail -->
        <activity
            android:name=".OrderDetailActivity"
            android:exported="false" />



    </application>

</manifest>
